{
  "include": [
    "src",
    "./declaration.d.ts",
    "tests/*/*.spec.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "declaration": false,
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "baseUrl": "",
    "paths": {
      "shared/*": [
        "src/shared/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
